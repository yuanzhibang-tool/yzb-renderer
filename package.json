{
  "name": "@yuanzhibang/renderer",
  "version": "0.0.10",
  "description": "猿之棒渲染端帮助类",
  "main": "commonjs/index.js",
  "module": "es6/index.js",
  "types": "es6/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --runInBand --env=node --colors --coverage test",
    "prod": "tsc -p tsconfig-commonjs.json ; tsc -p tsconfig-es6.json",
    "prepublish-npm": "rm -rf dist ; npm run prod ; cp package.json dist/package.json",
    "publish-npm": "cd dist ; npm publish --access public --registry https://registry.npmjs.com",
    "release": "npm version patch; npm run publish-npm"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.david-health.cn/yuanzhibang/yzb-renderer.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4"
  },
  "exports": {
    ".": {
      "import": "./es6/index.js",
      "require": "./commonjs/index.js",
      "types": "./es6/index.d.ts"
    }
  }
}
